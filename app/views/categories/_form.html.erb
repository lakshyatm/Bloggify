<div class="row justify-content-center pt-4">
  <div class="col-10">
    <% if @category.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <h4 class="alert-heading">The following errors prevented the category from being saved</h4>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      <hr>
      <ul>
        <% @category.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
        <% end %>
      </ul>
    </div>
    <%end %>
    <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
    <div class="form-group row mb-4">
      <%= f.label :name,"Category Name", class: "col-2 col-form-label text-light" %>
      <div class="col-10">
        <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
      </div>
    </div>

    <div class="form-group text-center">
      <%= f.submit class: "btn btn-outline-light btn-lg" %>
    </div>
    <% end %>
  </div>
</div>