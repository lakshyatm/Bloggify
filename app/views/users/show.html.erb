<div class="page-content">
  <h1 class="text-center pt-4"><%= @user.username %>'s Profile</h1>
  <div class="text-center pt-1">
     <%if @user.image.attached? %>
       <%= image_tag(@user.image, style:"width:150px; height:150px") %>
     <%else%>
        <%= image_tag 'avatar_icon.png', alt: 'icon',:style => "height: 150px; width:150px" %>
     <%end%>
  </div>

  <% if logged_in? && @user == current_user %>
  <div class="text-center mt-4">
    <%= link_to'Edit your profile' , edit_user_path(@user), class:"btn btn-outline-info" %>
  </div>
  <% end %>

  <div class="flickr_pagination">
    <%= will_paginate @articles, :container => false %>
  </div>

  <%if !@user.articles.empty? %>
    <h3 class="text-center pt-4">Articles</h3>
    <%= render 'articles/article'%>
    <div class="flickr_pagination mb-5">
      <%= will_paginate @articles, :container => false %>
    </div>
  <%else%>
     <div class="row justify-content-center align-items-center">
    <div class="col-8 ">
      <div class="card text-center mt-4 shadow mb-5 bg-body rounded">
        <div class="card-header">
          <h5>No articles available!!</h5>
        </div>
      </div>
    </div>
  </div>
  <%end%>
</div>