<div class="container">
  
  <% @articles.each do |article| %>
  <div class="row justify-content-center align-items-center">
    <div class="col-8 ">
      <div class="card text-center mt-4 shadow mb-5 bg-body rounded">
        <div class="card-header">
          <i> by <%= link_to article.user.username, user_path(article.user), class:"text-decoration-none" %></i>
          <% if article.categories.any? %>
              <%# It says rails go through each category this article is associated with and display a category partial.So we have to create a category partial in category folder!! We can use this in place of each loop here. %>
              <div class="mt-2">
                 <%= render article.categories %>  
              </div>
            <%end%>
        </div>
        <div class="card-body">
          <h5><%= link_to article.title , article_path(article),class:"card-title text-success" %></h5>
          <p class="card-text text-left"><%= truncate(article.description ,length:100)%></p>
          <%= link_to 'View' , article_path(article), class:"btn btn-outline-success" %>
          <% if logged_in? && ( article.user==current_user || current_user.admin) %>
          <%= link_to 'Edit' , edit_article_path(article), class:"btn btn-outline-info" %>
          <%= link_to "Delete", article_path(article), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
          <% end %>
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(article.created_at) %> ago, edited
            <%= time_ago_in_words(article.updated_at) %> ago </small>
        </div>
      </div>
    </div>
  </div>
  <% end %>


</div>